// üìÑ Location: prisma/schema.prisma
// üîí STABLE CONFIGURATION FOR NEON + PRISMA V6/V7 COMPATIBILITY

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"

  // moduleFormat forces ESM for Next.js 15/16/Turbopack compatibility
  moduleFormat = "esm"
}

datasource db {
  provider     = "postgresql"
  // üü¢ FIXED: url is required for Prisma 6 CLI validation
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// ==========================================
// üõ°Ô∏è MODELS (RESTORED)
// ==========================================

model User {
  id               String            @id @default(cuid())
  email            String            @unique
  clerkId          String            @unique
  stripeCustomerId String?           @unique
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  activeTaskCount  Int               @default(0)
  dailyUsageCount  Int               @default(0)
  lastUsageReset   DateTime          @default(now())
  overageBalance   Int               @default(0)
  tier             String            @default("STARTER")
  creditsTotal     Int               @default(10)
  creditsUsed      Int               @default(0)
  plan             String            @default("FREE")
  activities       Activity[]
  bots             Bot[]
  emailLogs        EmailLog[]
  leads            Lead[]
  subscriptions    Subscription?
  tasks            Task[]
  videoJobs        VideoJob[]
  executionRecords ExecutionRecord[]
}

model Bot {
  id         String        @id @default(cuid())
  userId     String
  name       String
  type       String
  status     String        @default("Idle")
  isRunning  Boolean       @default(false)
  desc       String
  lastRun    DateTime      @default(now())
  createdAt  DateTime      @default(now())
  user       User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  activities Activity[]
  persona    AgentPersona?
}

model AgentPersona {
  id           String   @id @default(cuid())
  botId        String   @unique
  systemPrompt String   @db.Text
  riskLevel    String   @default("LOW")
  capabilities String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  bot          Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
}

model Subscription {
  id                   String    @id @default(cuid())
  userId               String    @unique
  stripeSubscriptionId String?   @unique
  stripeCustomerId     String?   @unique
  stripePriceId        String?
  plan                 String?
  status               String?
  currentPeriodEnd     DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  discountApplied      Boolean   @default(false)
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Activity {
  id        String   @id @default(cuid())
  userId    String
  botId     String?
  action    String
  type      String   @default("INFO")
  metadata  Json?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  bot       Bot?     @relation(fields: [botId], references: [id], onDelete: SetNull)
}

model Lead {
  id           String   @id @default(cuid())
  userId       String
  businessName String
  website      String?
  email        String?
  phone        String?
  industry     String?
  location     String?
  source       String   @default("scraper")
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EmailLog {
  id        String   @id @default(cuid())
  userId    String
  text      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VideoJob {
  id        String   @id @default(cuid())
  userId    String
  status    String   @default("PENDING")
  videoUrl  String?
  prompt    String?
  settings  Json?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Task {
  id        String   @id @default(cuid())
  userId    String
  type      String
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PulseEvent {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  type      String   @default("ALERT")
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model InboxMessage {
  id        String   @id @default(cuid())
  userId    String
  sender    String
  subject   String
  body      String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model ProcessedStripeEvent {
  id        String   @id @default(cuid())
  eventId   String   @unique
  createdAt DateTime @default(now())
}

model ExecutionRecord {
  id           String   @id @default(cuid())
  userId       String
  status       String   @default("active")
  timestamp    DateTime @default(now())
  isAutonomous Boolean  @default(false)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
