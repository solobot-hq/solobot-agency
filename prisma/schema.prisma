// -----------------------------
// SoloBotAgency Prisma Schema
// -----------------------------

datasource db {
  provider = "postgresql"
  // url is managed in prisma.config.ts for Prisma 7
}

generator client {
  provider = "prisma-client-js"
}

// -----------------------------
// User & Subscription Models
// -----------------------------
model User {
  id               String   @id @default(cuid())
  email            String   @unique
  stripeCustomerId String?  @unique
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  // Relations
  subscriptions    Subscription[]
  videoJobs        VideoJob[]
}

model Subscription {
  id                   String   @id @default(cuid())
  userId               String   @unique
  stripeSubscriptionId String?  @unique // ✅ Fixes Webhook error
  stripeCustomerId     String?  @unique // ✅ Fixes Portal error
  stripePriceId        String?
  plan                 String?          // ✅ Fixes Webhook 'plan' error
  status               String?  // active, canceled, past_due
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// -----------------------------
// Video Bot Models
// -----------------------------
model VideoJob {
  id        String   @id @default(cuid())
  userId    String
  status    String   @default("PENDING") 
  videoUrl  String?
  prompt    String?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}

// -----------------------------
// Workspace & Other Models
// -----------------------------
model Workspace {
  id        String   @id @default(cuid())
  name      String
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PulseEvent {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  type      String   @default("ALERT")
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model InboxMessage {
  id        String   @id @default(cuid())
  userId    String
  sender    String
  subject   String
  body      String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}