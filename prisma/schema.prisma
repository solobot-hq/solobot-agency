generator client {
  // Use the new Prisma 7 default provider
  provider        = "prisma-client"
  // Keep your custom output path as it is now required by the "prisma-client" generator
  output          = "../src/generated/prisma"
  // Standard node engine for Next.js environments
  engineType      = "node"
}

datasource db {
  provider = "postgresql"
  // In Prisma 7, the URL is defined in prisma.config.ts, so it remains empty here
}

model User {
  id               String   @id @default(cuid())
  email            String   @unique
  clerkId          String   @unique
  stripeCustomerId String?  @unique

  tier             String   @default("STARTER") 
  
  dailyUsageCount  Int      @default(0) 
  lastUsageReset   DateTime @default(now())
  
  activeTaskCount  Int      @default(0)
  overageBalance   Int      @default(0)

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  emailLogs        EmailLog[]
  leads            Lead[]
  subscriptions    Subscription?
  videoJobs        VideoJob[]
  activities       Activity[]
  tasks            Task[]
  bots             Bot[]
}

model Bot {
  id        String   @id @default(cuid())
  userId    String
  name      String
  type      String
  status    String   @default("Idle")
  desc      String
  lastRun   DateTime @default(now())
  createdAt DateTime @default(now())

  // Relation fixed:userId references clerkId specifically for your bot logic
  user      User     @relation(fields: [userId], references: [clerkId], onDelete: Cascade)
}

model Subscription {
  id                   String   @id @default(cuid())
  userId               String   @unique
  stripeSubscriptionId String?  @unique
  stripeCustomerId     String?  @unique
  stripePriceId        String?
  plan                 String?
  status               String?
  currentPeriodEnd     DateTime?

  discountApplied      Boolean  @default(false)

  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Lead {
  id           String   @id @default(cuid())
  userId       String
  businessName String
  website      String?
  email        String?
  phone        String?
  industry     String?
  location     String?
  source       String   @default("scraper")
  createdAt    DateTime @default(now())

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EmailLog {
  id        String   @id @default(cuid())
  userId    String
  text      String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VideoJob {
  id        String   @id @default(cuid())
  userId    String
  status    String   @default("PENDING")
  videoUrl  String?
  prompt    String?
  settings  Json?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Activity {
  id        String   @id @default(cuid())
  userId    String
  action    String
  metadata  Json?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Task {
  id        String   @id @default(cuid())
  userId    String
  type      String
  status    String   @default("PENDING")
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PulseEvent {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  type      String   @default("ALERT")
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model InboxMessage {
  id        String   @id @default(cuid())
  userId    String
  sender    String
  subject   String
  body      String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}