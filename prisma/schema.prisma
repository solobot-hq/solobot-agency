// prisma/schema.prisma

generator client {
  provider        = "prisma-client-js"
  // Required in Prisma 7: Specify a path outside node_modules
  output          = "../generated/client"
  // Required to use the 'pg' adapter you've installed
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  // Note: The 'url' property is deprecated here in Prisma 7.
  // Connection strings are now managed in prisma.config.ts.
}

model User {
  id                String         @id @default(cuid())
  email             String         @unique
  clerkId           String         @unique 
  stripeCustomerId  String?        @unique
  plan              String?        
  usageCount        Int            @default(0)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  
  subscriptions     Subscription[]
  videoJobs         VideoJob[]
  emailLogs         EmailLog[]
}

model Subscription {
  id                   String   @id @default(cuid())
  userId               String   @unique
  stripeSubscriptionId String?  @unique
  stripeCustomerId     String?  @unique
  stripePriceId        String?
  plan                 String?
  status               String?
  currentPeriodEnd     DateTime?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EmailLog {
  id        String   @id @default(cuid())
  userId    String
  text      String   @db.Text
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VideoJob {
  id        String   @id @default(cuid())
  userId    String
  status    String   @default("PENDING") 
  videoUrl  String?
  prompt    String?
  settings  Json?    
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Workspace {
  id        String   @id @default(cuid())
  name      String
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PulseEvent {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  type      String   @default("ALERT")
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model InboxMessage {
  id        String   @id @default(cuid())
  userId    String
  sender    String
  subject   String
  body      String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}