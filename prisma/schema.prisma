generator client {
  provider   = "prisma-client"
  output     = "../src/generated/prisma"
  engineType = "node"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String        @id @default(cuid())
  email            String        @unique
  clerkId          String        @unique
  stripeCustomerId String?       @unique
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  activeTaskCount  Int           @default(0)
  dailyUsageCount  Int           @default(0)
  lastUsageReset   DateTime      @default(now())
  overageBalance   Int           @default(0)

  tier             String        @default("STARTER")
  creditsTotal     Int           @default(10)
  creditsUsed      Int           @default(0)
  plan             String        @default("FREE")

  activities       Activity[]
  bots             Bot[]
  emailLogs        EmailLog[]
  leads            Lead[]
  subscriptions    Subscription?
  tasks            Task[]
  videoJobs        VideoJob[]
}

model Bot {
  id        String   @id @default(cuid())
  userId    String
  name      String
  type      String
  status    String   @default("Idle")
  desc      String
  lastRun   DateTime @default(now())
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [clerkId], onDelete: Cascade)
}

model Subscription {
  id                   String    @id @default(cuid())
  userId               String    @unique
  stripeSubscriptionId String?   @unique
  stripeCustomerId     String?   @unique
  stripePriceId        String?
  plan                 String?
  status               String?
  currentPeriodEnd     DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  discountApplied      Boolean   @default(false)

  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Lead {
  id           String   @id @default(cuid())
  userId       String
  businessName String
  website      String?
  email        String?
  phone        String?
  industry     String?
  location     String?
  source       String   @default("scraper")
  createdAt    DateTime @default(now())

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EmailLog {
  id        String   @id @default(cuid())
  userId    String
  text      String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VideoJob {
  id        String   @id @default(cuid())
  userId    String
  status    String   @default("PENDING")
  videoUrl  String?
  prompt    String?
  settings  Json?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Activity {
  id        String   @id @default(cuid())
  userId    String
  action    String
  metadata  Json?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Task {
  id        String   @id @default(cuid())
  userId    String
  type      String
  status    String   @default("PENDING")
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PulseEvent {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  type      String   @default("ALERT")
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model InboxMessage {
  id        String   @id @default(cuid())
  userId    String
  sender    String
  subject   String
  body      String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

//
// REQUIRED FOR STRIPE WEBHOOK IDEMPOTENCY
//
model ProcessedStripeEvent {
  id        String   @id @default(cuid())
  eventId   String   @unique
  createdAt DateTime @default(now())
}

//
// REQUIRED FOR USAGE ENFORCEMENT (CURRENT BUILD BLOCKER)
//
model ExecutionRecord {
  id        String   @id @default(cuid())
  userId    String
  timestamp DateTime @default(now())
}
